<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Search View at the top for filtering -->
    <SearchView
        android:id="@+id/searchViewOthers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Search Others"
        android:layout_marginBottom="16dp" />

    <!-- Scroll View to hold the card views -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchViewOthers"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Women Hair Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardWomenHair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textWomenHair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Women Hair"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceWomenHair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹200/kg"
                        android:layout_below="@id/textWomenHair" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Battery Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBattery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceBattery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹50/kg"
                        android:layout_below="@id/textBattery" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tyre Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTyre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textTyre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tyre"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceTyre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹20/kg"
                        android:layout_below="@id/textTyre" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Mix-Waste Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMixWaste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textMixWaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mix-Waste"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceMixWaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹5/kg"
                        android:layout_below="@id/textMixWaste" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Beer Bottles Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardBeerBottles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textBeerBottles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beer Bottles"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceBeerBottles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹2/piece"
                        android:layout_below="@id/textBeerBottles" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Old Clothes Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOldClothes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textOldClothes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Old Clothes"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceOldClothes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹10/kg"
                        android:layout_below="@id/textOldClothes" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Machines Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMachines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textMachines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Machines"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/priceMachines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹50/kg"
                        android:layout_below="@id/textMachines" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
